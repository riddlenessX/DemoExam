<Window x:Class="Masterpol.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Masterpol"
        mc:Ignorable="d"
        Title="Мастер пол" MinHeight="450" MinWidth="800" Width="1024" Height="720">
    <DockPanel LastChildFill="True" Background="{StaticResource PrimaryBackgroundColorBrush}">
        <StackPanel Margin="10" DockPanel.Dock="Top" HorizontalAlignment="Left" Orientation="Horizontal">
            <Image Source="Resources/logo.png" Width="40" Height="40" Margin="0,0,10,0" />
            <TextBlock Text="Мастер Пол" VerticalAlignment="Center" FontSize="30" Foreground="{StaticResource PrimaryColorBrush}" FontWeight="Bold" Margin="0, 0, 10, 0"/>
            <Button Content="Добавить нового партнера" Style="{StaticResource ButtonStyle}" Click="AddPartner_Click"></Button>
        </StackPanel>
        <Frame x:Name="MainFrame">
            
        </Frame>
    </DockPanel>
</Window>
