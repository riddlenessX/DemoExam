<Page x:Class="Masterpol.Pages.PartnerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Masterpol.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PartnerPage">

    <Grid>
        <!-- Заголовок страницы -->
        <TextBlock Text="Партнеры" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="20"/>

        <!-- ScrollViewer для прокрутки карточек партнеров -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10,60,10,10">
            <StackPanel x:Name="PartnersBlock" Orientation="Vertical">

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
